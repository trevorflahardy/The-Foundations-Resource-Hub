{
  "name": "The Arduino Guide",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  // Enable NVIDIA GPU support if available on the host
  "runArgs": [
    "--gpus=all"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "akamud.vscode-theme-onedark",
        "aaron-bond.better-comments",
        "usernamehw.errorlens",
        "DavidAnson.vscode-markdownlint",
        "GitHub.vscode-pull-request-github",
        "ms-python.black-formatter",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-pyright.pyright",
        "WakaTime.vscode-wakatime",
        "ms-python.debugpy",
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "streetsidesoftware.code-spell-checker",
        "ritwickdey.LiveServer"
      ]
    }
  },
  "postCreateCommand": "bash -c 'pip install --no-cache-dir -e .'",
  "postStartCommand": "bash -c 'chmod +x ./.devcontainer/scripts/start_ollama.sh && chmod +x ./.devcontainer/scripts/check_gpu.sh && ./.devcontainer/scripts/start_ollama.sh && ./.devcontainer/scripts/check_gpu.sh'"
}
